{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "USAddress",
  "type": "object",
  "properties": {
    "street": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "pattern": "^[A-Z]{2}$",
      "description": "2-letter state abbreviation"
    },
    "zip": {
      "type": "string",
      "pattern": "^[0-9]{5}$"
    }
  },
  "required": ["street", "city", "state", "zip"]
}
